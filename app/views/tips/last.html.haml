- content_for :title do
  Last Tips

.container
  .panel.panel-default
    .panel-header.pas

      %ul.sports-filter
        %li
          %a.btn{href: last_tips_path(sport_filter_param(nil)), class: class_for_sport_filter('all')}
            All sports
        - @sports.each do |sport|
          %li
            %a.btn{href: last_tips_path(sport_filter_param(sport.name.downcase)), class: class_for_sport_filter(sport.name)}
              = sport.name.titleize
      %hr
      .text-center
        %ul.list-inline.list-unstyled.mbn.dates-list
          %li
            %a{href: last_tips_path(date_filter_param(nil)), class: class_for_date_filter('today')}
              Today
          - date_range_filter_for_tips.each do |date|
            %li
              %a{href: last_tips_path(date_filter_param(date[:value])), class: class_for_date_filter(date[:value])}
                = date[:label]
    .panel-body
      / Tab panes
      .tab-content
        #all.tab-pane.active
          %table.table.table-bordered.table-hover.bgw
            %thead
              %tr
                %th Event
                %th Odds
                %th Tipster
                %th Sport
                %th Published at
                %th Stake
                %th Profit
                %th Result
            %tbody
              - @tips.each do |tip|
                %tr
                  %td.text-info
                    %a{href: tip_path(tip)}= tip.event
                  %td= tip.odds
                  %td
                    %a.text-warning{href: tipster_path(tip.author)}= tip.author.full_name
                  %td= tip.sport.name.titleize
                  %td= tip.published_at
                  %td= tip.amount
                  %td
                    - if tip.published?
                      - if tip.correct?
                        %span.text-success
                          \+
                          = tip.profit
                      - else
                        %span.text-danger
                          \-
                          = tip.amount
                    - else
                      \---
                  %td
                    - if tip.published?
                      - if tip.correct?
                        %span.text-success
                          &#x2714;
                      - else
                        %span.text-danger
                          &#x2718;
                    - else
                      \---
          - if @tips.empty?
            .clearfix
              .text-center.text-danger
                Not found !


