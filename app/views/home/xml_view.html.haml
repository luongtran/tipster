= content_for(:title, "List all sport match ...")
.center-block
  %ul.sports-filter
    %li
      %a.btn.btn-default{href: list_match_path(sport_filter_param(nil)), class: class_for_sport_filter('all')} All sports
    - @sports.each do |sport|
      %li
        %a.btn.btn-default{href: list_match_path(sport_filter_param(sport.name.downcase)), class: class_for_sport_filter(sport.name)}= sport.name.titleize
%table.table.table-bordered.bgw.table-hover
  %thead
    %tr
      %th League
      %th Date
      %th Live
      %th Home
      %th Visiting
      %td MoneyLineVisiting
      %td M Home
      %td M Draw
  %tbody
    - if @results.empty?
      %tr
        %td
          There are no any match found.
        %td
        %td
        %td
        %td
        %td
    - else
      - @results.each do |result|
        %tr
          %td= result["league"]
          %td= result["datetime"]
          %td= result["islive"]
          %td= result["participiant_name_0"]
          %td= result["participiant_name_1"]
          %td= result["moneyline_visiting"]
          %td= result["moneyline_home"]
          %td= result["moneyline_draw"]