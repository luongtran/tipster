= javascript_include_tag 'jquery.Jcrop'
%h1 Crop Avatar
= image_tag @user.avatar_url(:large), id: "cropbox"
%h4 Preview
%div{style: "width:100px; height:100px; overflow:hidden"}
  = image_tag @user.avatar.url(:large), :id => "preview"
= simple_form_for @user,as: :user,url: crop_avatar_path_for(@user), method: 'POST', html: {class: 'form-inline',novalidate: true}  do |f|
  - %w[x y w h].each do |attribute|
    = f.hidden_field "crop_#{attribute}"
  .actions
    = f.submit "Crop"