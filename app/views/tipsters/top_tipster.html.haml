%table.table.table-bordered
  %caption Top Tipster Ranking on last 6 month
  %thead
    %tr
      %th Full Name
      %th Email
      %th Created at
      %td Action
  %tbody
    - if @tipsters.nil?
      %tr
        %td
          There are no any tipster found.
        %td
        %td
        %td
    - else
      - @tipsters.each do |tipster|
        %tr
          %td
            = tipster.name
          %td
            = tipster.email
          %td
            = tipster.created_at.strftime("%m/%d/%Y")
          %td
            = link_to 'Add to cart', add_tipster_to_cart_path(tipster.id),class: 'btn btn-success' ,method: 'post'