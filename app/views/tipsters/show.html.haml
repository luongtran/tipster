= content_for(:title,"Tipster profile page")
%h1 Tipster information
.container
  .col-md-6
    %span
      = image_tag @tipster.avatar_url || 'avatar.jpg',class: 'user_avatar'
    %span
      %h3 Statistics
  .col-md-6
    %h3 Subscribe to this Tipster
    = button_tag "Add To Cart" ,class: 'btn btn-success'
.center-block
  %ul.sports-filter
    - @menu = ["General","Statistics","Last picks","Service Description","News"]
    - @menu.each do |menu|
      %li
        %a.btn.btn-default{href:"javascript:;"}= menu
.row
  .col-md-6.col-md-offset-3
    %h2= "#{@tipster.name} overall profit"
    %table.table.table-bordered
      %thead
        %tr
          %th Month
          %th Profit
          %th Yield
          %th Num of tips
      %tbody
        - 0..12.times do |i|
          %tr
            %td= i + 1
            %td= "#{(10..100).to_a.sample}%"
            %td= "#{(10..200).to_a.sample}%"
            %td= "#{(12..150).to_a.sample}"