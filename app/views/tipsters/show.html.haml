= content_for :title do
  Tipster profile

#profile-overiew-page
  .container
    #profile-overview.profile-overview
      .row
        .col-md-6
          .clearfix
            #profile-overview-common.profile-overview-common.clearfix.pam
              #profile-overview-avatar.profile-overview-common.avatar.pull-left.mrl
                = image_tag (@tipster.avatar_url || 'demo.jpg'), class: 'user_avatar'
              #profile-overiew-statistic.profile-overiew-statistic.pull-left.text-md
                %h3.ptn.mtn.text-slim.mbl= @tipster.full_name
                = render 'shared/add_to_cart_form', {tipster_id: @tipster.id , disable: tipster_ids_in_cart.include?(@tipster.id.to_s)}

        .col-md-1.col-md-offset-4
          = select_tag :ranking, options_for_select(ranking_ranges_for_select), class: 'select-as-links'
    #profile-overview-detail
      .panel.panel-default
        .panel-header
          .mam.text-center
            %ul.list-unstyled.list-inline
              %li
                %a.btn.btn-default{href: '#'}
                  General statistics
                %a.btn.btn-default{href: '#'}
                  Details statistics
                %a.btn.btn-default{href: '#'}
                  Last tips
                %a.btn.btn-default{href: '#'}
                  Description
          .clearfix
            %hr
        .panel-body
          .clearfix
            .col-md-12
              .col-md-2.col-md-offset-1.text-center
                %h2
                  %i Profit:
                = @tipster.profit_in_string(true)
              .col-md-2.text-center
                %h2
                  %i Yield:
                = @tipster.yield_in_string
              .col-md-2.text-center
                %h2
                  %i Tips:
                = @tipster.number_of_tips
              .col-md-2.text-center
                %h2
                  %i Avg Odds:
                = @tipster.avg_odds
              .col-md-2.text-center
                %h2
                  %i Win rate:
                = @tipster.hit_rate_in_string
            .col-md-12
              .text-center
                = high_chart("profil-chart-container", @chart)




