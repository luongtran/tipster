= content_for(:title, "My Account")
.row
  .col-lg-12
    .col-lg-7
      .well
        %h2= I18n.t('user.account_info')
        %hr
        %span
          = render 'avatar_crop'
        %hr
        -#  = image_tag @user.avatar.url(:thumb)
        -#%span
        -#  = simple_form_for @user, as: :user, url: change_avatar_path_for(@user), method: 'POST', html: {class: 'form-inline',novalidate: true} do |f|
        -#    = f.file_field :avatar
        -#    = f.hidden_field :avatar_cache
        -#    = submit_tag t("user.update_avatar")
        -#%hr
        = simple_form_for @user, as: :user, url: update_profile_path_for(@user), method: 'POST', html: {class: 'form-horizontal', novalidate: true} do |f|
          = f.input :display_name
          = f.input :full_name
          .form-group
            .col-sm-offset-3.col-sm-9
              %button.btn.btn-primary{type: "submit"}= t('user.update_account')
    .col-lg-5
      .well
        %h2= I18n.t('user.change_password')
        %hr
        = simple_form_for @user, as: :user, url: change_password_path_for(@user), method: 'POST', html: {class: 'form-horizontal'} do |f|
          = f.input :current_password, required: true
          = f.input :password, required: true
          = f.input :password_confirmation, required: true
          .form-group
            .col-sm-offset-3.col-sm-9
              %button.btn.btn-primary{type: "submit"}= t('user.change_password')