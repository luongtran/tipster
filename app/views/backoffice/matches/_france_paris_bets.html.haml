- if bets.empty?
  %p.text-danger.text-center
    %i Not found any bets!
    %br
    %a.btn.btn-warning.btn-xs{href: new_backoffice_tip_path(match: match)}
      Create tip with your own bet
- else
  .bets-on-match
    - grouped_bets = bets.group_by{|bet| bet[:name]}
    - grouped_bets.each do |bet_type, g_bets|
      %h4.bet-type-name.text-warning= bet_type
      - g_bets.each do |bet|
        - bet[:choices].each do |choice|
          .bet-choice
            %span.text-bold
              - choice_name = choice[:selection]
              = choice_name
            %button.btn.btn-xs.btn-default.choice-odd-button{data: {'bookmarker-code' => 'france_paris', 'bet-type-code' => bet[:code], odd: choice[:odd],
                'choice-name' => choice_name, 'match-id' => match.opta_match_id, 'match-name' => match.name, 'bet-type-name' => bet[:name]}}
              = choice[:odd]

