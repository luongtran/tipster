.well
  %h2 Create new tip
  = simple_form_for @tip, url: backoffice_tips_path, html: {class: 'form-horizontal'} do |f|
    = f.input :event,as: :select, collection: events_for_select(@events), include_blank: false
    = f.input :platform, as: :select, collection: platforms_for_select, include_blank: false
    = f.input :bet_type, as: :select, collection: bet_types_for_select, include_blank: false
    = f.input :odds
    = f.input :selection
    = f.input :stake, input_html: {placeholder: 'a percentage of a betting bankroll'}
    = f.input :advice
    .form-group
      .col-sm-offset-3.col-sm-9
        %button.btn.btn-primary{type: :submit} Submit
        %a.btn.btn-default{href: backoffice_tips_path } Cancel