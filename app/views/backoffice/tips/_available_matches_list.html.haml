- matches_grouped = matches.group_by(&:start_date)
- matches_grouped.each do |date,matches|
  .text-center
    %button.btn.btn-default= date.strftime("%A, %b %d, %Y")
  - matches.each do |m|
    .match{data: {url: find_bets_on_match_backoffice_tips_path(match_id: m.opta_match_id)}}
      .summary
        %h4.text-bold.text-info
          = "#{m.competition.try(:name)} / #{m.name}"
        %i.text-warning= m.start_at.strftime("%H:%M")
      .bets.clearfix.hide-tmp
        %hr

- if matches.empty?
  .text-danger.text-center
    %h4 Not found any matches!