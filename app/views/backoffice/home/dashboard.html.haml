.mam
  .panel.panel-success
    .panel-heading
      %strong Overview
      .pull-right
        %strong= t("tipster.ranking.ranges.#{@tipster.current_statistics_range}").titleize
    .panel-body
      .row
        .text-center
          = high_chart("profil-chart-container", @chart)
      %hr
      .row
        .col-md-2.col-md-offset-1
          Number of tips:
          %strong= @tipster.number_of_tips
        .col-md-2
          Profit:
          %strong= @tipster.profit_in_string
        .col-md-2
          Yield:
          %strong= @tipster.yield_in_string
        .col-md-2
          Win rate:
          %strong= @tipster.hit_rate_in_string
        .col-md-2
          Avg of odds:
          %strong= @tipster.avg_odds
.mam
  .panel.panel-success
    .panel-heading
      %strong Last tips
    .panel-body
      %table.table.table-bordered.table-hover
        %thead
          %tr
            %th Match/Event Name
            %th Sport
            %th Created at
            %th Odds
            %th Selection
            %th Status
        %tbody
          - @recent_tips.each do |tip|
            %tr
              %td= tip.match.try :name
              %td= tip.sport_name.titleize
              %td= tip.created_at
              %td= tip.odds
              %td= tip.selection
              %td= tip.status_in_string
      .text-center
        %a.btn.btn-default.btn-sm{href: backoffice_my_tips_path} More

