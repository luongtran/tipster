.container
  - unless current_tipster
    .bgw
      .login-form-wrapper.col-lg-5.col-lg-offset-3
        .col-sm-offset-4.col-sm-7
          %h3 Sign In
        = simple_form_for :account, :url => backoffice_sign_in_path , :html => {class: 'form-horizontal'} do |f|
          = f.input :email, :required => false, :autofocus => true, input_html:{ value: @email}
          = f.input :password, :required => false
          -#= f.input :remember_me, :as => :boolean
          .form-group
            .col-sm-offset-4.col-sm-7
              %button.btn.btn-primary.btn-block{type: :submit}= I18n.t('user.sign_in')
