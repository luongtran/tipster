%h3 Please complete your profile
= simple_form_for @profile, :url => profile_path(@profile), html: {class: 'form-horizontal'} do |f|
  = f.input :civility
  = f.input :birthday, as: :date
  = f.input :address, as: :text, input_html: {:rows => 5}
  = f.input :city
  = f.input :country, as: :country
  = f.input :zip_code
  = f.input :mobile_phone
  = f.input :telephone
  = f.input :favorite_betting_website

  = f.input :know_website_from, as: :select, collection: know_website_from_for_select, include_blank: false
  = f.input :secret_question, as: :select, collection: secret_questions_for_select, include_blank: false
  = f.input :answer_secret_question
  = f.button :submit

