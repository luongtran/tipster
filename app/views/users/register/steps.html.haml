%h3 Registration steps
#rootwizard{'data-no-turbolink' => true}
  .navbar
    .navbar-inner
      .container
        %ul
          %li{class: set_current_register_step('offer')}
            %a{"data-toggle" => "tab", href: "#tab2"} Offer/Tipster
          %li{class: set_current_register_step('identification')}
            %a{"data-toggle" => "tab", href: "#tab1"} Identification
          %li{class: set_current_register_step('payment')}
            %a{"data-toggle" => "tab", href: "#tab4"} Payment
          %li{class: set_current_register_step('confirmation')}
            %a{"data-toggle" => "tab", href: "#tab5"} Confirmation
  .control-winzard
    %ul.pager.wizard
      %li.previous
        %a{href: "#"} &laquo; Previous
      %li.next
        %a{href: "#"} Next &raquo;
  .tab-content
    #tab2.tab-pane{class: set_current_register_step('offer')}
      = render 'users/register/offer' , {tipsters: @data[:tipsters_in_cart], :selected_plan => @data[:selected_plan]}
    #tab1.tab-pane{class: set_current_register_step('identification')}
      = render 'users/register/identification', {current_profile: @data[:current_profile]}
    #tab4.tab-pane{class: set_current_register_step('payment')}
      = render 'users/register/payment'
    #tab5.tab-pane{class: set_current_register_step('confirmation')}
      = render 'users/register/confirmation'

:javascript
  $(document).ready(function() {
      $('#rootwizard').bootstrapWizard();
  });