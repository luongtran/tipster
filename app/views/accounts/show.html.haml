.row-fluid
  .col-lg-7
    .well
      %h2 Account informations
      %hr
      = simple_form_for @user, as: :user, url: my_account_path_for(@user), method: 'POST', html: {class: 'form-horizontal', novalidate: true} do |f|
        = f.input :first_name
        = f.input :last_name
        - profile = @user.profile || @user.build_profile
        = f.simple_fields_for :profile do |f_p|
          = render 'profiles/form', f: f_p
        .form-group
          .col-sm-offset-3.col-sm-9
            %button.btn.btn-primary{type: "submit"}= t('user.update_account')
  .col-lg-5
    .well
      %h2 Change password
      %hr
      = simple_form_for @user, as: :user, url: change_password_path, method: 'POST', html: {class: 'form-horizontal'} do |f|
        = f.input :current_password, required: true
        = f.input :password, required: true
        = f.input :password_confirmation, required: true
        .form-group
          .col-sm-offset-3.col-sm-9
            %button.btn.btn-primary{type: "submit"}= t('user.change_password')