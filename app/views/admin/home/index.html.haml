- unless current_admin
  .login-form-wrapper.col-lg-5.col-lg-offset-3

    = simple_form_for :account, :url => admin_sign_in_path , :html => {class: 'form-horizontal'} do |f|
      .col-sm-offset-4.col-sm-7
        %h3 Sign In
      = f.input :email, :required => false, :autofocus => true
      = f.input :password, :required => false
      .form-group
        .col-sm-offset-4.col-sm-7
          %button.btn.btn-primary.btn-block{type: :submit}= I18n.t('user.sign_in')
      %hr
      .col-sm-offset-3
        %p.text-i
          Demo account:
          %strong admin1@fakemail.com/123456