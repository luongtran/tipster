.panel.panel-default.tip-details-panel
  .panel-heading
    %h3.panel-title.match-name
      %i{class: class_for_sport_icon(@tip.sport_code)}
      = @tip.match_name
  .panel-body.tip-info
    .col-lg-2.tipster-info
      - author_url = '#'
      - if @tip.author.is_a? Tipster
        - author_url = admin_tipster_path(@tip.author)
      %p.text-center
        %a.text-bold{href: author_url, target: 'blank'}
          = @tip.author_full_name.capitalize
      = image_tag 'demo.jpg', class: 'img-fill'
      %p.text-center
        %a{href: '#'} View all tips
    .col-lg-9.tip-details
      %table.table.tip-details-table
        %tr
          %td Created at:
          %td
            %span.text-i= @tip.created_at.strftime(t('time.formats.date_with_time'))
        %tr
          %td
            Sport:
          %td
            %span.text-i= @tip.sport_name
        %tr
          %td
            Type of bet:
          %td
            %span.text-i= @tip.bet_type_name
        %tr
          %td Selection:
          %td
            %span.text-i= @tip.selection
        %tr
          %td Odds:
          %td
            %span.text-i= @tip.odds
        %tr
          %td Bookmarker:
          %td
            %span.text-i= @tip.bookmarker_code.try(:titleize)
        %tr
          %td Amount:
          %td
            %span.text-i= @tip.amount
        %tr
          %td Status:
          %td
            %span{class: class_for_tip_status(@tip.status)}= @tip.status_in_string
      %p
        %hr
      - if @tip.finished?
        %h4
          Tip result:
          - if @tip.correct?
            %span.text-success.text-bold
              = t('tip.result.win')
              = "(#{profit_in_string(@tip.profit,true)})"
          - else
            %span.text-danger.text-bold
              = t('tip.result.lose')
              = "(#{profit_in_string(@tip.profit,true)})"
      - else
        - if @tip.rejectable?
          %a.btn.btn-default.btn-sm.text-danger.btn-reject-tip{href: '#', 'data-url' => reject_admin_tip_path(@tip)}
            %i.fa.fa-times-circle
            Reject
        - if @tip.publishable?
          %a.btn.btn-default.btn-sm.text-success.btn-publish-tip{href: '#', 'data-url' => publish_admin_tip_path(@tip)}
            %i.fa.fa-globe
            Publish
        - if @tip.finishable?
          %a.btn.btn-default.btn-sm.text-success.btn-finish-tip{href: '#', 'data-url' => finish_admin_tip_path(@tip)}
            %i.fa.fa-check-square
            Finish
.panel.panel-default
  .panel-heading
    %h3.panel-title.text-bold Match details
  .panel-body
    = render "backoffice/matches/match_details/#{@match.sport_code}", match: @match
= render 'action_modal_boxs'

