%ul.steps-container
  %li{class: class_for_subscribe_step(1,@step)}
    .text-center
      %p
        %span.step-number 1
      %p
        %span.step-name= links_for_subscribe_step(1,session[:step])
  %li.step-seperator-container
    .step-seperator
  %li{class: class_for_subscribe_step(2,@step)}
    .text-center
      %p
        %span.step-number 2
      %p
        %span.step-name= (@select_plan && @select_plan.free?) ? t('menu.subscribe.step2') : links_for_subscribe_step(2,session[:step])
  %li.step-seperator-container
    .step-seperator
  %li{class: class_for_subscribe_step(3,@step)}
    .text-center
      %p
        %span.step-number 3
      %p
        %span.step-name= links_for_subscribe_step(3,session[:step])
  %li.step-seperator-container
    .step-seperator
  %li{class: class_for_subscribe_step(4,@step)}
    .text-center
      %p
        %span.step-number 4
      %p
        %span.step-name= (@select_plan && @select_plan.free?) ? t('menu.subscribe.step4_free') : links_for_subscribe_step(4,session[:step])
  - unless (@select_plan && @select_plan.free?)
    %li.step-seperator-container
      .step-seperator
    %li{class: class_for_subscribe_step(5,@step)}
      .text-center
        %p
          %span.step-number 5
        %p
          %span.step-name= links_for_subscribe_step(5,session[:step])
    %li.step-seperator-container
      .step-seperator
    %li{class: class_for_subscribe_step(6,@step)}
      .text-center
        %p
          %span.step-number 6
        %p
          %span.step-name= links_for_subscribe_step(6,session[:step])