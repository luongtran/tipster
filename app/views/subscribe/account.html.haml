  Registration
.container
  .row
    .subscribe-steps
      %ul.steps-container
        %li.current
          .text-center
            %p
              %span.step-number 1
            %p
              %span.step-name Account
        %li.step-seperator-container
          .step-seperator
        %li
          .text-center
