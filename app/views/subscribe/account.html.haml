              %span.step-name Receive your tips
        %li.step-seperator-container
          .step-seperator
        %li
          .text-center
            %p
              %span.step-number 5
            %p
              %span.step-name Payment
  .row
    .step-content.col-md-10.col-md-offset-1
      .panel.panel-default
        .panel-body.text-center
          .tipster-form
            = simple_form_for @account, url: subscribe_account_path, html: {id: 'sign-up-form', class: 'tipster-form-style form-horizontal mbn', nonvalidate: false} do |acc|
              = acc.input :email, required: true
              = acc.input :password, required: true
              = acc.input :password_confirmation, required: true
              -#.form-group
              -#  .col-md-7.col-md-offset-4
