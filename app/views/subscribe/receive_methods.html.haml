= javascript_include_tag 'subscribe'
- content_for :title do
  Registration
.container
  .row
    .subscribe-steps
      %ul.steps-container
        %li.complete
          .text-center
            %p
              %span.step-number 1
            %p
              %span.step-name= link_to t('menu.subscribe.step1'), subscribe_account_path
        %li.step-seperator-container
          .step-seperator
        %li.complete
          .text-center
            %p
              %span.step-number 2
            %p
              %span.step-name= link_to t('menu.subscribe.step2'), subscribe_choose_offer_path
        %li.step-seperator-container
          .step-seperator
        %li.complete
          .text-center
            %p
              %span.step-number 3
            %p
              %span.step-name= link_to t('menu.subscribe.step3'), subscribe_personal_information_path
        %li.step-seperator-container
          .step-seperator
        %li.complete
          .text-center
            %p
              %span.step-number 4
            %p
              %span.step-name= link_to t('menu.subscribe.step4'),subscribe_shared_path

        %li.step-seperator-container
          .step-seperator
        %li.current
          .text-center
            %p
              %span.step-number 5
            %p
              %span.step-name= t('menu.subscribe.step5')
        %li.step-seperator-container
          .step-seperator
        %li
          .text-center
            %p
              %span.step-number 6
            %p
              %span.step-name= t('menu.subscribe.step6')
  .row
    .step-content.col-md-10.col-md-offset-1
      .panel.panel-default
        .panel-body.text-center
          = simple_form_for :nothing, url: subscribe_receive_methods_path , method: 'POST' , html: {id: 'form-receive-tip-methods'}do |f|
            %h3
              How do you want to receive your tips?
            .row
              .col-md-2.col-md-offset-5
                .checkbox
                  %label
                    %input{type: :checkbox, name: 'receive_tip_methods[]', value: 'by_email', checked: current_subscriber.receive_tip_by_email?} By Email
                .checkbox
                  %label
                    %input{type: :checkbox, name: 'receive_tip_methods[]', value: 'by_sms', checked: current_subscriber.receive_tip_by_sms?} By SMS
            .row
              .text-center
                %br
                %button.btn.btn-success{type: :submit} Next >>