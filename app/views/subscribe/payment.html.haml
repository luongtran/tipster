- content_for :title do
  Registration
.container
  .row
    .subscribe-steps
      %ul.steps-container
        %li.complete
          .text-center
            %p
              %span.step-number 1
            %p
              %span.step-name Account
        %li.step-seperator-container
          .step-seperator
        %li.complete
          .text-center
            %p
              %span.step-number 2
            %p
              %span.step-name Personal Information
        %li.step-seperator-container
          .step-seperator
        %li.complete
          .text-center
            %p
              %span.step-number 3
            %p
              %span.step-name Share on social network

        %li.step-seperator-container
          .step-seperator
        %li.complete
          .text-center
            %p
              %span.step-number 4
            %p
              %span.step-name Receive your tips
        %li.step-seperator-container
          .step-seperator
        %li.current
          .text-center
            %p
              %span.step-number 5
            %p
              %span.step-name Payment
  .row
    .step-content.col-md-10.col-md-offset-1
      .panel.panel-default
        .panel-body
          %h3 Review your selection:
          %p You select plan
          %span= @select_plan.title
          %p Plan price
          %span= @select_plan.price.to_s + "/month"
          %p Plan period
          %span= @select_plan.period.to_s + "month"
          %p Total price
          %span= @subscription.calculator_price
          %h3 List tipsters in your cart
          %table.table.table-bordered
            %caption Tipsters selected lists
            %thead
              %tr
                %th Tipster name
                %th Total tips
                %th Profit
                %th Yeild
            %tbody
              - if @tipsters.empty?
                %tr
                  %td{colspan: '4'} Your cart is empty !
              - else
                - @tipsters.each do |tipster|
                  %tr
                    %td
                      = tipster.full_name
                    %td
                      = tipster.tips_count
                    %td
                      = tipster.profit
                    %td
                      = tipster.yield
          %h3 Select your payment method
          %ul.inline
            %li
              = simple_form_for :nothing, url: subscribe_payment_path, remote: true do |f|
                = hidden_field_tag :method, Payment::BY_PAYPAL
                %button.btn.btn-primary.btn-large{type: :submit} With Paypal
            #payment
            %li
              = simple_form_for :nothing, url: subscribe_payment_path do |f|
                = hidden_field_tag :method, Payment::BY_FRENCH_BANK
                %button.btn.btn-warning.btn-large{type: :submit} French Bank