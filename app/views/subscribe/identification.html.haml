#rootwizard{'data-no-turbolink' => true}
  .navbar
    .navbar-inner
      .container
        %ul.nav.nav-pills
          %li
            %a{"data-toggle" => "tab", href: "#tab1"} Choose Offer
          %li.active
            %a{"data-toggle" => "tab", href: "#tab2"} Identification
          %li
            %a{"data-toggle" => "tab", href: "#tab3"} Payment Method
          %li
            %a{"data-toggle" => "tab", href: "#tab4"} Payment
          %li
            %a{"data-toggle" => "tab", href: "#tab5"} Confirmation
  .tab-content
    #tab2.tab-pane.active
      - if current_subscriber
        %h4 Your informations:
        %ul
          %li
            Email:
            = current_subscriber.email
          %li Show profile here
        %a.btn.btn-warning{href: '#'} Use another account?
        - unless current_subscriber.profile
          %h3 You need to supply these informations
          = simple_form_for current_profile, url: subscribe_identification_path do |f|
            = hidden_field_tag :act, 'update_profile'
            = render 'profiles/form', f: f
            .form-group
              .col-sm-offset-3.col-sm-9
                %button.btn.btn-primary{type: "submit"} Submit
      - else
        .row.clearfix
          .col-md-6
            %h3 I'm returning user
            - account = @account || Account.new
            = simple_form_for account, :url => subscribe_identification_path, :method => 'POST', :html => {class: 'form-horizontal'} do |f|
              -#= hidden_field_tag :return_path, subscribe_payment_method_path
              = hidden_field_tag :act, 'sign_in'
              = f.input :email, :required => false, :autofocus => true,class: 'form-group'
              = f.input :password, :required => false,class: 'form-group'
              = f.input :remember_me, :as => :boolean #if devise_mapping.rememberable?
              .control-group
                .controls
                  = f.button :submit, "Sign in", class: 'btn btn-success'
            = simple_form_for :nothing, url: subscribe_identification_path,class: 'form-inline' do |f|
              = hidden_field_tag :act, 'facebook'
              %button.btn.btn-small.btn-primary{type: :submit} Facebook
            = simple_form_for :nothing, url: subscribe_identification_path,class: 'form-inline' do |f|
              = hidden_field_tag :act, 'google_oauth2'
              %button.btn.btn-small.btn-warning{type: :submit} Google +
          .col-md-6
            %h3 I'm a New customer
            = simple_form_for :account, url: account_registration_path,:html => {class: 'form-horizontal'} do |f|
              .form-inputs
                = render 'shared/account_fields', f: f
                = f.simple_fields_for :subscriber do |fr|
                  = render 'shared/subscribe_fields',f: fr
              .form-actions
                = f.button :submit, "Sign up", class: 'btn btn-primary'