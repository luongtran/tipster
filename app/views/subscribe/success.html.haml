            %a{ href: subscribe_payment_method_path} Payment Method
          %li
            %a{"data-toggle" => "tab", href: "#tab4"} Payment
          %li.active
            %a{"data-toggle" => "tab", href: "#tab5"} Confirmation
  .tab-content
    #tab5.tab-pane.active
      .row-fluid
        - if @message
          .well
            .text-danger
              = @message
        .well
          %ul
            %li
              %span
                %strong Transaction id
              %span= @payment.try(:txn_id)
            %li
              %span
                %strong Transaction status
              %span= @payment.payment_status
            - if @payment.payment_status != "Completed"
              %li
                %span
                  %strong Pending reason
                %span= PAYPAL_PENDINGS["#{params[:pending_reason]}"]
            %li
              %span
                %strong Payer email
              %span= @payment.payer_email
            %li
              %span
                %strong Payment name
              %span= "#{@payment.payer_first_name} #{@payment.payer_last_name}"

            %li
              %span
                %strong Payment amount
              %span= "â‚¬#{@payment.mc_gross}"
            %li
              %span
                %strong Payment date
              %span= @payment.payment_date