= content_for(:title, "Forgot password")
.container
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name),
      :html => { :method => :post,  class: 'form-horizontal' }) do |f|
    = f.input :email, :required => true, :autofocus => true
    .form-group
      .col-sm-offset-4.col-sm-7
        %button.btn.btn-primary{type: :submit} Send me reset password instructions
