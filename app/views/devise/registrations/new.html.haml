- content_for :title do
  Registration
// Sign up form
#sign-up-bg.tipster-form-bg
  #sign-up-board.tipster-form-board
    .tipster-form-board-sp
      .container.pts.pbs
        %h4.text-uppercase Become Tipster Today and get Free trial !
    .container.ptm.pbm
      Start with free account really easy now.
      %br
      Just complete form below and you become member of Tipster Hero !
  #sign-up-form.tipster-form
    .tipster-form-top
    .tipster-form-mid.clearfix
      = simple_form_for @subscriber, :url => registration_path(resource_name), html: {class: 'form-horizontal mbn form-register', novalidate: true} do |f|
        .form-group
          = f.label :first_name, required: false
          .col-md-7
            = f.input_field :first_name, autofocus: true
            = f.error :first_name, class: :hidden
        .form-group
          = f.label :last_name, required: false
          .col-md-7
            = f.input_field :last_name
            = f.error :last_name, class: :hidden
        = f.simple_fields_for :account do |acc|
          .form-group
            = acc.label :email, required: false
            .col-md-7
              = acc.input_field :email, required: false, autocomplete: 'off'
              = acc.error :email, class: :hidden
          .form-group
            = acc.label :password, required: false
            .col-md-7
              = acc.input_field :password, :required => true
              = acc.error :password, class: :hidden
          .form-group
            = acc.label :password_confirmation, required: false
            .col-md-7
              = acc.input_field :password_confirmation, required: false
              = acc.error :password_confirmation, class: :hidden
        .form-group
          .col-md-7.col-md-offset-4
            %button.btn.btn-success{type: :submit}
              %i.typcn.typcn-world.mrs
              = t('activerecord.attributes.account.submit')
            %a.mls.text-xs{href: new_account_password_path} Recovery Account
            %label.checkbox.text-slim
              %input#cb-term-and-conditions{type: :checkbox, checked: request.post?} I agree with term & conditions
    .tipster-form-bot
