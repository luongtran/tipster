#page_header_top
  .container.clearfix
    #tipster-logo-main.pull-left
      %a{href: backoffice_root_path}
        = image_tag 'tipster-logo-main.png', alt: 'Tipster hero', class: 'img-responsive'
    #menu-main.pull-right
      %ul.list-inline
        - if current_tipster
          %li
            %a{href: backoffice_tips_path}
              %i.glyphicon.glyphicon-credit-card
              My Tips
          %li
            %a{href: new_backoffice_tip_path}
              %i.glyphicon.glyphicon-user
              New Tip
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              = current_tipster.full_name
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href: backoffice_my_profile_path} My Account
              %li.divider
              %li
                %a{href: backoffice_sign_out_path} Sign Out
        - else
          %li
            %a.btn.btn-sm{href: backoffice_sign_in_path} Sign In
