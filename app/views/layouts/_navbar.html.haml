#page_header_top
  .container.clearfix
    #tipster-logo-main.pull-left
      %a{:href=>"/"}
        =image_tag("tipster-logo-main.png", :alt=>"Tipster hero", :class=>"img-responsive")
    #menu-main.pull-right
      %ul.list-inline
        %li
          %a{href: pricing_path} Pricing
        %li
          %a{href: tipsters_path} Tipsters
        %li
          %a{href: tips_path} Tips
        - if current_subscriber
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              = current_subscriber.name
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href: my_account_path} My Account
              %li
                %a{href: subscriptions_path} My Subscription
              %li.divider
              %li
                %a{href: destroy_subscriber_session_path}= I18n.t('user.sign_out')
        - else
          %li
            %a{href: new_subscriber_session_path}= I18n.t('user.sign_in')
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Connect
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href: new_subscriber_registration_path}= I18n.t('user.sign_up')

              = render 'shared/social_connection_links'
#page_header_mid

  // this is container header box for sub-page (signup - steps etc)
  #sub-page-header
    .container.clearfix
      .pull-left
        #sub-page-title.clearfix
          %span(class="icon typcn typcn-location pull-left man")
          .pull-right
            #sub-page-navi
              %ul.list-inline.man.text-slim
                - @items = ['Home', 'Tipsters']
                - @items.each do |node|
                  %li
                    %a{:href=>"javascript:;"}= node
            %h1#sub-page-h1.man.text-slim= yield(:title)
      .pull-right
        #sub-page-quickpanel.clearfix
          .quickpanel-left
          .quickpanel-mid
            %ul.list-inline.man
              %li
                %a{href: cart_path}= "Cart box(#{tipster_ids_in_cart.size})"
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  = I18n.t('lang')
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{href: 'javascript:;',onclick: 'select_lang("en");'} English
                  %li
                    %a{href: 'javascript:;',onclick: 'select_lang("fr");'} French
                  %li
                    %a{href: 'javascript:;',onclick: 'select_lang("vi");'} Viá»‡t Nam
                  %li
                    %a{href: 'javascript:;',onclick: 'select_lang("zh");'} Chinese
              %li
                %a{:href=>"javascript:;"}
                  %i(class="typcn typcn-cog")
          .quickpanel-right