.navbar.navbar-default
  .navbar-inner
    %a.brand{href: root_path} HOME
    %ul.nav
      %li
        %a{href: pricing_path} Pricing
      %li
        %a{href: cart_path}= "Cart(#{tipster_ids_in_cart.size})"
      %li
        %a{href: top_tipsters_path} TOP Tipsters
      %li
        %a{href: tipsters_path} Tipsters
      %li
        %a{href: subscribe_choose_offer_path, 'data-no-turbolink' => true} Subscribe!
      %li
        %a{href: subscriptions_path} My Subscription
    %ul.nav.pull-right
      - if current_user
        %li.text-info
          = link_to "Hi #{current_user.name}", my_account_path
        %li
          = link_to "Sign Out", destroy_user_session_path
      - else
        %li
          = link_to 'Register', new_user_registration_path
        %li
          = link_to 'Sign In', new_user_session_path
        = render 'shared/social_connection_links'
