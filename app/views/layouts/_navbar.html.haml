.navbar.navbar-default
  .navbar-inner
    %a.brand{href: root_path} HOME
    %ul.nav
      %li
        %a{href: pricing_path} Pricing
      %li
        %a{href: subscriptions_show_path}= "Cart(#{session[:cart].nil? ? 0 : session[:cart][:tipster_ids].count})"
      %li
        %a{href: top_tipster_path} Tipster
    %ul.nav.pull-right
      - if current_user
        %li
          = link_to "Hi #{current_user.name}, Sign Out", destroy_user_session_path
      - else
        %li
          = link_to 'Register', new_user_registration_path
        %li
          = link_to 'Sign In', new_user_session_path
        = render 'shared/social_connection_links'
