#page_header_top
  .container.clearfix
    #tipster-logo-main.pull-left
      %a{href: root_path}
        = image_tag 'tipster-logo-main.png', alt: 'Tipster hero', class: 'img-responsive'
    #menu-main.pull-right
      %ul.list-inline.man
        %li
          %a#lk-view-cart{href: cart_path, class: "#{tipster_ids_in_cart.empty? ? 'empty' : ''}"}
            %i.glyphicon.glyphicon-shopping-cart
            = "Shopping cart(#{tipster_ids_in_cart.size})"
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %img{src: I18n.t('language.icon')}
            = I18n.t('language.text')
            %b.caret
          %ul.dropdown-menu
            %li
              %a.lk-change-lang{href: 'javascript:;', class: class_for_link_to_change_lang('en'),data: {lang: 'en', url: select_language_path}}
                English
            %li
              %a.lk-change-lang{href: 'javascript:;', class: class_for_link_to_change_lang('fr'), data: {lang: 'fr', url: select_language_path}}
                FranÃ§ais
        - if current_subscriber
          %li
            %a{:href=>"javascript:;"}
              %i.fa.fa-gear
              Settings
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => "dropdown", href: "#"}
              = current_subscriber.full_name.blank? ? 'Account' : current_subscriber.full_name
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href: my_profile_path}= t('menu.my_profile')
              %li
                %a{href: subscription_path}= t('menu.my_subscription')
              %li.divider
              %li
                %a{href: destroy_account_session_path}
                  %i.glyphicon.glyphicon-log-out
                  = I18n.t('user.sign_out')
  .menu
    .container
      %ul.list-inline.clearfix
        %li.pull-left
          %a{href: '#'}
            Statistics
        %li.pull-left
          %a{href: '#'}
            Livescore
        %li.pull-left
          %a{href: tipsters_path}
            = t('menu.tipster')
        %li.pull-left
          %a{href: last_tips_path}
            Last tips
        %li.pull-left
          %a{href: '#'}
            News
        %li.pull-left
          %a{href: pricing_path}
            = t('menu.pricing')
        - unless current_subscriber
          %li.pull-left
            %a.lk-toggle-sign-in-box{href: '#'}
              %i.glyphicon.glyphicon-log-in
              = I18n.t('user.sign_in')
          -#%li
          -#  %a.lk-toggle-sign-up-box{href: '#'}= I18n.t('user.sign_up')


