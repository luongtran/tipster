.navbar.navbar-default
  .navbar-inner
    %a.brand{href: root_path} HOME
    %ul.nav
      %li
        %a{href: pricing_path} Pricing
      %li
        %a{href: cart_path}= "Cart(#{tipster_ids_in_cart.size})"
      %li
        %a{href: top_tipster_path} Tipster
      %li
        %a{href: registration_path} Registration process
    %ul.nav.pull-right
      - if current_user
        %li
          = link_to "Hi #{current_user.name}",profile_path(current_user.id)
        %li
          = link_to "Sign Out", destroy_user_session_path
      - else
        %li
          = link_to 'Register', new_user_registration_path
        %li
          = link_to 'Sign In', new_user_session_path
        = render 'shared/social_connection_links'
