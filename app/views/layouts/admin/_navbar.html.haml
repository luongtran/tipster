%nav.navbar.navbar-default#backoffice-navbar{role: "navigation"}
  .navbar-header
    %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: admin_root_path} Admin Dashboard
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav
      - if current_tipster
        %li
          %a{href: backoffice_tips_path} My tips
        %li
          %a{href: new_backoffice_tip_path} New Tip
    %ul.nav.navbar-nav.navbar-right
      - if current_tipster
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            = current_tipster.full_name
            %b.caret
          %ul.dropdown-menu
            %li
              %a{href: backoffice_my_profile_path} My Account
            %li.divider
            %li
              %a{href: backoffice_sign_out_path} Sign Out
      - else
        %li
          %a{href: admin_sign_in_path} Sign In
