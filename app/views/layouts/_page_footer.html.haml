      .row
        .col-md-4
          #page-footer-logo
            =image_tag('footer-icon.png')
        .col-md-4
          %h4.text-slim APP AVAILABLE SOON!
          %a(href="javascript:;" class="anchor-app" ) IOS AND ANDROID
